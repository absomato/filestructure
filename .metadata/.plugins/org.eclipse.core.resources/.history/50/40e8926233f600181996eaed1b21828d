import java.io.*;
import java.nio.Buffer;
import java.nio.ByteBuffer;

public class ManageStudents {

	public static void main(String[] args) {
		if (args.length != 3 && args.length != 2) {
			System.out.println("USAGE: java ReadStudents   입력파일명   [학생이름]");
			System.exit(0);
		}
		String name = null;
		String kk = null;
		int sum = 0;
		int pcnt = 1;// 학생들 수를  count할 변수
		int errcat = 0;// 어떤 종류의 에런지 확인하는 변수
		if (args.length == 3) {
			name = args[2];
			kk = args[1];
		}
		String input_file = args[0];

		File in_f = new File(input_file);
		if (!in_f.exists()) {
			System.out.println(input_file + " does not exist");
			System.exit(0);
		}

		try {
			RandomAccessFile din = new RandomAccessFile(in_f, "rw");
			Student s = new Student();
			Boolean found = false;
			int size = 0;

			System.out.println("File Size : " + din.length());
			while (true) {

				if ((size = s.readStudent(din)) < 0)
					break; // if EOF
				if (name == null) {
					System.out.println("[" + size + " bytes] " + s);
					// s.printStudent();
					continue;
				} else if (kk.equals("p")) {
					if (Integer.parseInt(name) == 0) {
						found = true;
						System.out.println("[" + size + " bytes] " + s);
						continue;
					} else if (pcnt == Integer.parseInt(name)) {
						found = true;
						System.out.println("[" + size + " bytes] " + s);
						break;
					} else {
						pcnt++;
						sum += size + 4;
						if (sum == din.length()) {
							errcat = 1;
							break;
						}
						continue;
					}
					// s.printStudent();{
				} else if (kk.equals("s")) {
					if (s.number.equals(name)) {
						found = true;
						System.out.println("[" + size + " bytes] " + s);
						break;
					} else
						continue;
				} else if (kk.equals("n")) {
					if (s.name.equals(name)) {
						found = true;
						System.out.println("[" + size + " bytes] " + s);
					} else
						continue;
				} else if (kk.equals("a")) {
					if (s.address.contains(name)) {
						found = true;
						System.out.println("[" + size + " bytes] " + s);
					} else
						continue;
				}else if(kk.equals("d")) {
					if(Integer.parseInt(name)==0) {}
					else {

						System.out.println(din.getFilePointer());
						if(pcnt==Integer.parseInt(name)) {
							String str="1234?구";
							byte[] bytes=str.getBytes();
							ByteBuffer buf = ByteBuffer.wrap(bytes);
							found=true;
							System.out.println("[" + size + " bytes] " + s);
							
							System.out.println();
							System.out.println(din.getFilePointer()-size-4);
							System.out.println("[" + size + " bytes] " + s);
							break;
						}
						pcnt++;
					}
				}
				
				else {
					found = true;
					System.out.println("error..");
					break;
				}
			}
			if (name != null && !found) {
				if (errcat == 1)
					System.out.println("error");
				else
					System.out.println("No " + name + "'s student exists");
			}
			din.close();
		} catch (IOException err) {
			System.out.println("file I/O error..");
		}
	}
}